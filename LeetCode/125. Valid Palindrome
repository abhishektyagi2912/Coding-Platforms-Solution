class Solution {
private:
    /// check the function is valid or not  int his number are also thier
    bool valid(char c){
        if( (c>='a' && c<='z') || (c>='A' && c<='Z') || (c>='0' && c<= '9')){
            return 1;
        }
        return 0;
    }
    char toLowercase(char ch){
        if(ch>='A' && ch<='Z'){
            int t=ch-'A'+'a';
            return t;
            
        }
        else {
            return ch;
        }
    }
    bool checkPalindrom(string a){
    int s=0;
    int e=a.length()-1;
    while (s<=e)
    {
        if(a[s]!=a[e]) return 0;
        else{
            s++;
            e--;
        }
    }
    return 1;
} 
public:
    bool isPalindrome(string s) {
        string str="";   //empty string
        for(int i=0;i<s.length();i++){
            if(valid(s[i])){
                str.push_back(s[i]);
            }
        }
        for(int j=0;j<s.length();j++){
            str[j]=toLowercase(str[j]);
        }
        return checkPalindrom(str);
        
    }
};
